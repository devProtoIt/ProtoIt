<PLATFORM>
	MBOT
<AUTHOR>
	ProtoIt
<YEAR>
	2018

<DEVICE>
	ACTUATOR, PWM Uitgang
<COPYRIGHT>
	2018, ProtoIt
<ICON>
	pinout.png
<PORT>
	PIN, Pin
<SIGNALIN>
	VALUE, Signaal (%), #P Signaalwaarde
	START, Start wanneer?, > Direct, #P Start en stop, #E
	STOP, Start wanneer?, > Nooit, #E
<CONSTANT>
	SETOFF, Uit, 0, #P SIGNAALWAARDE
	SETON, Maximaal, 100
	SET_NOW, Direct, 1, #P START EN STOP
	SET_NEVER, Nooit, 0
<PRIVATE>
	ACTIVE, Active
<SETUP>
	pinMode( PIN, OUTPUT);
<STEPINIT>
	START = 0;
	STOP = 0;
	ACTIVE = 0;
<FUNCTIONUPDATE>
    if ( (int) START )
        ACTIVE = 1;
	if ( (int) STOP && (int) ACTIVE ) {
		ACTIVE = 0;
		analogWrite( PIN, 0);
	}
<ACTUATORUPDATE>
	if ( (int) ACTIVE )
		analogWrite( PIN, (((long) VALUE) * 255) / 100);
<END>
